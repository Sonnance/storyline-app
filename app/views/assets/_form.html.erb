<%= simple_form_for([@story, @asset]) do |f| %>
  

  <div class="field">
    <%= f.input :asset_type, collection: Asset.asset_types, :label_method => :last, :value_method => :first, :include_blank => false, :input_html => { :class => "form-control" } %>
  </div>
  <div class="field">
    <%= f.input :name, :input_html => { :class => "form-control" } %>
  </div>
  <div class="field">
    <%= f.input :description, :input_html => { :class => "form-control" } %>
  </div>
  <div class="field">
    <%= f.input :durability, :input_html => { :class => "form-control" } %>
  </div>
  <div class="actions">
    <%= f.submit "Save", :class => "btn btn-primary" %>
  </div>
<% end %>
