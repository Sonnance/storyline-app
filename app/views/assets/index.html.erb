<h1>Listing assets</h1>

<table class="table">
  <thead>
    <tr>
      <th>Asset type</th>
      <th>Name</th>
      <th>Description</th>
      <th>Durability</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @assets.each do |asset| %>
      <tr>
        <td><%= asset.type_as_string %></td>
        <td><%= asset.name %></td>
        <td><%= asset.description %></td>
        <td><%= asset.durability %></td>
        <td><%= link_to 'Show', story_asset_path(@story, asset) %></td>
        <td><%= link_to 'Edit', edit_story_asset_path(@story, asset) %></td>
        <td><%= link_to 'Destroy', story_asset_path(@story, asset), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Asset', new_story_asset_path(@story) %>
