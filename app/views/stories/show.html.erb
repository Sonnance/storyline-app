<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @story.title %>
</p>

<p>
  <strong>Description:</strong>
  <%= @story.description %>
</p>

<p>
  <strong>Default char name:</strong>
  <%= @story.default_char_name %>
</p>

<h2>Scenes</h2>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Story</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @story.scenes.each do |scene| %>
      <tr>
        <td><%= scene.title %></td>
        <td><%= scene.description %></td>
        <td><%= scene.story_id %></td>
        <td><%= link_to 'Show', story_scene_path(@story, scene) %></td>
        <td><%= link_to 'Edit', edit_story_scene_path(@story, scene) %></td>
        <td><%= link_to 'Destroy', story_scene_path(@story, scene), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'New Scene', new_story_scene_path(@story) %>

<h2>Assets</h2>
<table>
  <thead>
    <tr>
      <th>Asset type</th>
      <th>Name</th>
      <th>Description</th>
      <th>Durability</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @story.assets.each do |asset| %>
      <tr>
        <td><%= asset.asset_type %></td>
        <td><%= asset.name %></td>
        <td><%= asset.description %></td>
        <td><%= asset.durability %></td>
        <td><%= link_to 'Show', story_asset_path(@story, asset) %></td>
        <td><%= link_to 'Edit', edit_story_asset_path(@story, asset) %></td>
        <td><%= link_to 'Destroy', story_asset_path(@story, asset), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'New Asset', new_story_asset_path(@story) %>

<%= link_to 'Edit', edit_story_path(@story) %> |
<%= link_to 'Back', stories_path %>
